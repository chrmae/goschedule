<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.projectprototype.NewReports"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/reports_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0097a7"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/reports_myleavestext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:paddingLeft="5dp"
            android:text="Reports"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/reports_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <Spinner
            android:id="@+id/reports_year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:prompt="@string/year_prompt" />

        <Spinner
            android:id="@+id/reports_month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:entries="@array/select_month"
            android:prompt="@string/month_prompt" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/reports_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/header_eid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:paddingLeft="5dp"
            android:text="EID"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/header_vl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:paddingLeft="5dp"
            android:text="VL"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/header_sl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:paddingLeft="5dp"
            android:text="SL"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/header_el"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:paddingLeft="5dp"
            android:text="EL"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>



    <ListView
        android:id="@+id/listReport"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </ListView>

    <LinearLayout
        android:id="@+id/reports_linearLayout7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:orientation="vertical">


        <Button
            android:id="@+id/reports_backhome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_gravity="bottom"
            android:padding="12dp"
            android:background="#0097a7"
            android:textColor="#ffffff"
            android:onClick="backHome"
            android:text="BACK"/>



    </LinearLayout>

</LinearLayout>
